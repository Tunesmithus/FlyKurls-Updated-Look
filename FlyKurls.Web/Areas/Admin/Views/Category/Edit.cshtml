@model FlyKurls.Models.Category
@{
    ViewData["Title"] = "Edit";
}

<form method="post" asp-action="Edit"> 
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Edit Category</h2>
        </div>
        <div asp-validation-summary = "All"></div>
        <div class="mb-3">   
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" /> 
            <span asp-validation-for="Name" class="text-danger"></span>
            
        </div>
        <div class="mb-3">   
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" /> 
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <button asp-action="Edit" type="submit" class="btn btn-success" style="width:150px">Update</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-primary"><i class="bi bi-arrow-left-circle"></i>
            Back To List
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name ="_ValidationScriptsPartial"/> 

    }

}

